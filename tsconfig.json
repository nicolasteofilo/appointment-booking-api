{
	"$schema": "https://www.schemastore.org/tsconfig",
	"_version": "24.0.0",

	"compilerOptions": {
		"baseUrl": ".",
		"lib": [
			"es2024",
			"ESNext.Array",
			"ESNext.Collection",
			"ESNext.Iterator",
			"ESNext.Promise"
		],
		"module": "nodenext",
		"target": "es2024",
		"outDir": "./dist",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
